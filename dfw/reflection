  <!-- ===== Scripts (same behavior as dfw/index.html) ===== -->
  <script>
    (function () {
      // collapse by default
      document.querySelectorAll('.submenu').forEach(s => s.style.display = 'none');
      document.querySelectorAll('.nav-toggle .triangle').forEach(t => t.textContent = '▶');

      // toggles
      document.querySelectorAll('.nav-toggle').forEach(btn => {
        btn.addEventListener('click', () => {
          const ul  = document.querySelector(btn.dataset.target);
          const tri = btn.querySelector('.triangle');
          const open = ul.style.display === 'block';
          ul.style.display = open ? 'none' : 'block';
          tri.textContent  = open ? '▶' : '▼';
        });
      });

      // keep original link labels if you had JS changing them
      const d = document.querySelector('a[href="/data-projects.html"]'); if (d) d.textContent = 'Data';
      const l = document.querySelector('a[href="/library-projects.html"]'); if (l) l.textContent = 'Library';

      // --- DFW pages: auto-expand Extra Curricular and highlight current link
      const path = location.pathname.replace(/\/index\.html$/, '/'); // /dfw/reflection/index.html → /dfw/reflection/
      if (path.startsWith('/dfw/')) {
        const extraBtn = document.querySelector('button[data-target="#extra-sub"]');
        const extraUl  = document.querySelector('#extra-sub');
        const tri      = extraBtn?.querySelector('.triangle');
        if (extraUl) extraUl.style.display = 'block';
        if (tri)     tri.textContent = '▼';

        document.querySelectorAll('#extra-sub a').forEach(a => {
          const href = a.getAttribute('href')?.replace(/\/index\.html$/, '/');
          if (href === path) a.classList.add('active');
        });
      }
    })();
  </script>
